signature POINT = sig
    type t
    val constructor : int -> t


structure Point = struct 

(* member variables become record field names *)
(* features: values on each axis, *)
(* numFeatures: feature count, *)
(* membership: id of the cluster that the point belongs to *)
type PointObj = {features : real,
		 numFeatures : int,
		 membership : int}

(* methods are PointObj, ... -> PointObj functions contained in the *)
(* Point structure, public methods are in the signature *)

fun constructor(numFeatures) =
    let
	val ret = {features = array(numFeatures, 0),
		   numFeatures = numFeatures,
		   membership = -1}
    in
	ret
    end
